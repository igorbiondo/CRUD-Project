<%- include ('../partials/header') %>
    <h1>Pessoas</h1>
    <p><a href="/pessoas/create">Nova pessoa</a></p>
    <table class="table thead-ligh table-hover table-bordered">
        <tr>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
        <% pessoas.map( pessoa => { %>
        <tr>
            <td><%= pessoa.nome %></td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a type="button" class="btn btn-outline-secondary" href="/pessoas/update/<%= pessoa.id %>">Editar</a>
                    <a type="button" class="btn btn-secondary" href="/pessoas/delete/<%= pessoa.id %>" onclick="return confirm('Deseja realmente excluir?')">Excluir</a>
                </div>
            </td>
        </tr>
        <% }) %>
    </table>

<%- include ('../partials/footer') %>